{%- assign image = section.settings.image | img_url: 'master' -%}

<div id="featured-section" style="background-image: url( {{ image }} ); background-repeat: no-repeat;
    background-size: cover; background-position: center;">
    <div id="featured-description">
        <h1>{{ section.settings.headline }}</h1>
        <h3>{{ section.settings.subheading }}</h3>
        <a href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
    </div>
</div>

{% schema %}
{
"name": "Featured Section",
"class": "index-section section-flush",
"settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "image_alt_text",
    "label": "Image Alt Text"
    },
    {
        "type": "text",
        "id": "headline",
        "label": "Headline"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
    },
    {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
    },
    {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
    }
],
"presets": [
{
"name": "Featured Section",
"category": "Index"
}
]
}
{% endschema %}
