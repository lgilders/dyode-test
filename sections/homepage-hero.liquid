<section id="hero-section">
    <div id="hero-wrapper">
    {% for block in section.blocks %}
        <div class="hero-block"> <!-- Start Hero Block -->
        {% comment %} Clickable Banner {% endcomment %}
        {% if block.settings.clickable_banner %}<a href="{{ block.settings.cta_url }}" id="clickable-banner">{% endif %}
            {% comment %} Background Images {% endcomment %}
            {% assign desktop_img = block.settings.desktop_image | img_url: "master" %}
            {% assign mobile_img = block.settings.desktop_image | img_url: "1024x" %}
            
            {% if block.settings.mobile_image %}
                {% assign mobile_img = block.settings.mobile_image | img_url: "1024x" %}
            {% endif %}
            
            {% comment %} Mobile Image {% endcomment %}
            <div class="mobile-only" style="background-image: url( {{ mobile_img }} ); background-repeat: no-repeat;
                                            background-size: cover; background-position: center;"></div>
            
            {% comment %} Desktop Image {% endcomment %}
            <div class="desktop-only" style="background-image: url( {{ desktop_img }} ); background-repeat: no-repeat;
                                            background-size: cover; background-position: center;"></div>
            
            {% comment %} Banner Content {% endcomment %}
            <div class="hero-content {{ block.settings.text_position }} {{ block.settings.text_align }}">
                {% comment %} Headline {% endcomment %}
                <h1 class="{{ block.settings.text_align }}" style="color: {{ block.settings.headline_color }}">{{ block.settings.headline }}</h1>

                {% comment %} Subheading {% endcomment %}
                <h2 class="{{ block.settings.text_align }}" style="color: {{ block.settings.subheading_color }}">{{ block.settings.subheading }}</h2>
                
                {% comment %} CTA Button {% endcomment %}
                {% if block.settings.cta_button %}
                    {%- assign cta_text_color = block.settings.cta_text_color -%}
                    {%- assign cta_text_color_hover = block.settings.cta_text_color_hover -%}
                    {%- assign cta_color = block.settings.cta_color -%}
                    {%- assign cta_border_color = block.settings.cta_border_color -%}
                    {%- assign cta_color_hover = block.settings.cta_color_hover -%}
                    {%- assign cta_border_color_hover = block.settings.cta_border_color_hover -%}

                    <a href="{{ block.settings.cta_url }}" style="color: {{ cta_text_color }}; background: {{ cta_color }}; border-color: {{ cta_border_color }};" onMouseOver="this.style.color={{ cta_text_color_hover }}; this.style.background={{ cta_color_hover }}; this.style.borderColor={{ cta_border_color_hover }}" onMouseOut="this.style.color={{ cta_text_color }}; this.style.background={{ cta_color }}; this.style.borderColor={{ cta_border_color }}">
                        {{ block.settings.cta_text }}
                    </a>
                {% endif %}
            </div>

        {% comment %} Clickable Banner {% endcomment %}
        {% if block.settings.clickable_banner %}</a>{% endif %}
        </div> <!-- End Hero Block -->
        {% endfor %}
    </div>
</section>

