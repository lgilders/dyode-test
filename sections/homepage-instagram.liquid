<div id="instagram-section">
    <h1>{{ section.settings.headline }}</h1>

    <div id="instagram-wrapper">
    {% for block in section.blocks %}
        <div class="instagram-block">
            <a href="{{ block.settings.link }}">
                <div class="instagram-image">
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image_alt_text }}" />
                </div>
            </a>
        </div>
    {% endfor %}
    </div>
</div>

{% schema %}
{
"name": "Instagram Section",
"class": "index-section section-flush",
"max_blocks": 5,
"settings": [
    {
        "type": "text",
        "id": "headline",
        "label": "Headline",
        "default": "Follow Us on Instagram!"
    }
],
"blocks": [
{
    "type": "block",
    "name": "Instagram Block",
    "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "image_alt_text",
    "label": "Image Alt Text"
    },
    {
        "type": "url",
        "id": "link",
        "label": "Image Link"
    }
]
}
],
"presets": [
{
"name": "Instagram Section",
"category": "Index"
}
]
}
{% endschema %}